# .gitconfig.local.example
# Copy this file to ~/.gitconfig.local and fill in your information
# This file should NOT be committed to version control

[user]
	name = Your Name
	email = your.email@example.com
	# Set to your SSH key path â€” 1Password provides this via the SSH agent
	signingkey = ssh-ed25519 YOUR_PUBLIC_KEY_HERE

# 1Password SSH commit signing
# Requires: 1Password desktop app with SSH agent enabled
[gpg]
	format = ssh
[gpg "ssh"]
	program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

