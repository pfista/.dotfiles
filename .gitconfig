# User information should be in ~/.gitconfig.local
# See .gitconfig.local.example for template
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[push]
	default = simple
	autoSetupRemote = true
[alias]
  b = for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'
  ld = "!f() { git log --oneline --format='%h %an %ar %s' $1; }; f"
  lga = "! git log --color --graph --branches --all --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
  lg = "!git log --color --graph --branches --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
  lgs = "!git log --color --graph --branches --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %Cgreen(%ad)%Creset %s' --date=short --abbrev-commit --author=pfista"
  c = commit
  st = status
  co = checkout
  ctags = !.git/hooks/ctags
  lm = "!git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative main..$(git symbolic-ref --short HEAD)"
  p = "pull"
  s = "!f() { \
  if [ -z \"$1\" ]; then echo 'usage: git s <branch-name>'; exit 1; fi; \
  if git show-ref --verify --quiet refs/heads/$1; then \
    git switch \"$1\"; \
  elif git show-ref --verify --quiet refs/remotes/origin/$1; then \
    git switch -c \"$1\" --track origin/\"$1\"; \
  else \
    git fetch origin --prune; \
    git switch main && git pull --ff-only --no-rebase; \
    git switch -c \"$1\" main; \
  fi; \
}; f"
[color]
	ui = true
[diff]
    tool = opendiff
[difftool]
    prompt = false
[difftool "opendiff"]
    cmd = /usr/bin/opendiff \"$LOCAL\" \"$REMOTE\" -merge \"$MERGED\" | cat
[core]
	editor = nvim
	excludesFile = ~/.gitignore
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = false
	side-by-side = true
	line-numbers = true

[merge]
	conflictstyle = diff3

[pull]
	rebase = true

[credential]
[init]
	templatedir = ~/.git_template
[commit]
	gpgsign = true

# GPG signing configuration should be in ~/.gitconfig.local
# See .gitconfig.local.example for 1Password SSH signing setup

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

# Include local configuration (user info, machine-specific settings)
[include]
  path = ~/.gitconfig.local
